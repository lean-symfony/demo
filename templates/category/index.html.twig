{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th>Nr</th>
            <th>Bezeichnung</th>
            <th>Aktualisiert am</th>
        </tr>
        </thead>
        <tbody>
        {% for c in categories %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.name }}</td>
                <td>{{ c.lastUpdate | date }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}