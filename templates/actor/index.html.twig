{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th>Nr</th>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Aktualisiert am</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for a in actors %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.firstName }}</td>
                <td>{{ a.lastName }}</td>
                <td>{{ a.lastUpdate | date }}</td>
                <td><a class="btn btn-secondary" href="{{ path("actor_edit",{ "id": a.id }) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav>
        <ul class="pagination pagination-sm justify-content-center">
            <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                <a class="page-link" href="{{ path('actor_page', {"page": current_page - 1 }) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            {% for i in 1..pages %}
            <li class="page-item {{ i == current_page ? 'active' : '' }}"><a class="page-link" href="{{ path('actor_page', {"page": i}) }}">{{ i }}</a></li>
            {% endfor %}
            <li class="page-item {{ current_page == pages ? 'disabled' : '' }}">
                <a class="page-link" href="{{ path('actor_page', {"page": current_page + 1}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}